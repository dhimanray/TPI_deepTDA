PRINT ARG=* STRIDE=50 FILE=COLVAR FMT=%8.4f
PRINT ARG=d1,d2,d3,d4,d5,d6,d7,d8,d9,d10,d11,d12,cyl.z STRIDE=50 FILE=descriptors
ENDPLUMED
